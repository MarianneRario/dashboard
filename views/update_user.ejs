<!--include header-->
<%- include("include/_header")%>
<!--/include header-->
<!--main section-->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i>All Users</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update User</h2>
      <span class="text-semilight">Use the form below to update user data.</span>
    </div>
    <!--update user form-->
    <!--form handling-->
<form id="update_user" method="POST">
    <div class="new_user">
    <div class="form-group">
        <label for="name" class="text-semilight">Name: </label>
        <input type="hidden" name="id" value="">
        <input type="text" name="name" value="" placeholder="Jane Doe">
    </div>
    <div class="form-group">
        <label for="email" class="text-semilight">Email: </label>
        <input type="text" name="email" value="" placeholder="jane.doe@email.com">
    </div>
    <div class="form-group">
        <label for="password" class="text-semilight">Password: </label>
        <input type="text" name="password" value="" placeholder="password">
    </div>
    <div class="form-group">
        <button type="submit" class="btn text-light update">SAVE</button>
    </div>
    </div>
</form>
  </div>
</main>
<!--/main section-->
<!--include footer-->
<%- include("include/_footer")%>
<!--/include footer-->
