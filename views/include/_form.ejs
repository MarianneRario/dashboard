<!--form handling-->
<form id="add_user" method="POST">
    <div class="new_user">
    <div class="form-group">
        <label for="name" class="text-semilight">Name: </label>
        <input type="hidden" name="id" value="">
        <input type="text" name="name" value="" placeholder="Jane Doe">
    </div>
    <div class="form-group">
        <label for="email" class="text-semilight">Email: </label>
        <input type="text" name="email" value="" placeholder="jane.doe@email.com">
    </div>
    <div class="form-group">
        <label for="password" class="text-semilight">Password: </label>
        <input type="text" name="password" value="" placeholder="password">
    </div>
    <div class="form-group">
        <button type="submit" class="btn text-light update">SAVE</button>
    </div>
    </div>
</form>